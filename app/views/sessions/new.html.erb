<div class="container-fluid mt-4 bg-light rounded">
  
  <div class="row h2 pt-4 text-muted justify-content-center">
    <h1>Login</h1>
  </div>
  <div class="row  p-4 justify-content-center">
    <%= form_with(scope: :session, url: sessions_path, local: true) do |form| %>
    <div class="form-group row">
      <div class="field">
        <%= form.label :email, class:"col-sm-2 col-form-label" %>
        <%= form.email_field :email, class:"form-control" %>
      </div>
    </div>
    
    <div class="form-group row">
      <div class="field">
        <%= form.label :password, class:"col-sm-2 col-form-label" %>
        <%= form.password_field :password, class:"form-control" %>
      </div>
    </div>
    
      <div class="actions ">
        <%= form.submit "Log in", class:"btn btn-primary mt-4" %>
      </div>
    <% end %>
  </div>

</div>



