<div class="row  p-4 justify-content-center">
  <%= form_with(model: @post, local:true, url: choose_new_or_edit ) do |form| %>

    <div class="form-group row">
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <h4><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h4>

          <ul>
            <% @post.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  
    <div class="form-group row">
      <%= form.label :content, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_area :content, rows:"7", class:"form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :image, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.file_field :image, required:true, multiple: true, accept: 'image/jpg,image/jpeg,image/png,image/gif', class:"form-control" %>
        <p class="text-muted fw-light">画像を複数枚同時に投稿することができます。</p>
        
      </div>
    </div>

    <div class="actions">
      <%= form.submit class:"btn btn-primary mt-2" %>
    </div>
    
  <% end %>
</div>
